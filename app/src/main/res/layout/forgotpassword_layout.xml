<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_background2"
        android:scaleType="centerCrop"
        android:contentDescription="Background Image" />

    <!-- Foreground Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Illustration (Adjusted Higher, Less Space) -->
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_person2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-100dp"
            android:contentDescription="Reset Password Illustration"/>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password?"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:layout_width="295dp"
            android:layout_height="149dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="40dp"
            android:text="No worries, weâ€™ll send you reset instructions!"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter your Email"
            android:drawablePadding="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_background"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:inputType="textEmailAddress"/>

        <!-- Reset Password Button -->
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reset Password"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <!-- Back to Login -->
        <TextView
            android:id="@+id/tv_back_to_login"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Back to Login"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</RelativeLayout>
